<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>Macaron.PropertyAccessor</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Gyu Song</Authors>
    <PackageId>Macaron.PropertyAccessor</PackageId>
    <PackageLicenseExpression>Unlicense</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/songkyoo/PropertyAccessor</RepositoryUrl>
    <Version>1.0.0</Version>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\PropertyAccessor.Core\PropertyAccessor.Core.csproj"
                      GeneratePathProperty="true" />
    <ProjectReference Include="..\PropertyAccessor.Generator\PropertyAccessor.Generator.csproj"
                      GeneratePathProperty="true" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(OutputPath)PropertyAccessor.Core.dll"
          Pack="true"
          PackagePath="lib/netstandard2.0"
          Condition="Exists('$(OutputPath)PropertyAccessor.Core.dll')" />
    <None Include="$(OutputPath)PropertyAccessor.Generator.dll"
          Pack="true"
          PackagePath="analyzers/dotnet/cs"
          Condition="Exists('$(OutputPath)PropertyAccessor.Generator.dll')" />
  </ItemGroup>

</Project>
